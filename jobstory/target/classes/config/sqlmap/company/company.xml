	<update id="updateRec" parameterType="Recruitment">
		update tb_recruitment
		set	   title =#{title},
			   name =#{name},
			   email=#{email},
			   phone=#{phone},
			   kakao_id=#{kakaoId},
			   job_id=#{jobId},
			   experience_id=#{experienceId},
			   work_id=#{workId},
			   staff_cnt=#{staffCnt},
			   education_id=#{educationId},
			   license=#{license},
			   gender=#{gender},
			   min_age=#{minAge},
			   max_age=#{maxAge},
