	<insert id="insertBoard" parameterType="CompReviewBoard">
		insert into tb_comp_review_board(
			title,
			content,
			score1,
			score2,
			score3,
			score4,
			score5,
			average		
		) values (
			#{title},
			#{content},
			#{score1},
			#{score2},
			#{score3},
			#{score4},
			#{score5},
			#{average}
		)
	</insert>
	
	<select id="selectBoardByNo" parameterType="int" resultMap="boardMap">
		select *
		 from tb_comp_review_board
		where board_no = #{no} 
	</select>
	
	<update id="viewCnt" parameterType="int">
		update tb_comp_review_board
		set view_cnt= view_cnt+1
		where board_no = #{no}	
	</update>
	
	<delete id="deleteBoard" parameterType="int">
    	delete 
    	  from tb_comp_review_board
    	 where board_no = #{no}
    </delete> 
    
    <update id="updateBoard" parameterType="CompReviewBoard">
		update tb_comp_review_board set 
		title=#{title},
		content=#{content}, 
		score1=#{score1},
		score2=#{score2},
		score3=#{score3},
		score4=#{score4},
		score5=#{score5},
		average=#{average}
		where board_no=#{no}
	</update>
	

